<%if current_user.owner%>
<%= link_to "create", new_gym_path%>
<%end%>
    <div class="col-12">
<h1 class="CuTitle_title__BbV07 h1 text-center mb-5">GYMS</h1>
</div>

<div class="container">
  <div class="row">
    <% @gyms.each do |gym| %>
      <div class="col-md-4">
        <div class="card mb-3">
          <%= link_to gym_path(gym) do %>
            <%= image_tag "fit2.png", class: "card-img-top", alt: "description_de_l'image" %>
            <%= gym.title%>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><strong><%= gym.title %></strong></h5>
            <p class="card-text"><%= gym.description%></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
