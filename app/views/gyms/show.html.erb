<p style="color: green"><%= notice %></p>

<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('fit.jpg')">
  <%= "Gym-Bro" %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="card-product">
        <%= image_tag("fit2.png", class: "img-fluid") %>
        <div class="card-product-infos">
          <h2>Gym-Bro</h2>
          <p><%= "Smart fitness center" %></p>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card-product-infos">
        <h2>Gym-Bro where fitness meets excellence!</h2>
        <p><strong>Price per hour: </strong><%= "98chf" %></p>
        <p><strong>Address: Gym-Bro, LeWagon-Switzerland </strong><%= "Lausanne-Renens" %></p>
        <p><strong>Contact us for any inquiries or feedback: </strong><%= "0041-77805-579" %></p>
      </div>
    </div>
  </div>
</div>

<% if current_user.owner %>
  <h1>Welcome, owner!</h1>

  <div>
    <%= link_to "Edit this gym", edit_gym_path(@gym) %>
    <%= button_to "Destroy this gym", @gym, method: :delete %>
  </div>
<% end %>
