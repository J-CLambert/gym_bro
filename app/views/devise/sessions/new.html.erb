<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <h2 class="text-center">Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'text-center' }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: 'form-control' } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: 'form-control' } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions mt-3">
          <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
        </div>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
